{
  "name": "@sonate/core",
  "version": "1.4.0",
  "description": "Core trust protocol implementation for SONATE platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "node -e \"const fs=require('fs'); try{fs.rmSync('dist',{recursive:true,force:true});fs.rmSync('tsconfig.tsbuildinfo',{force:true})}catch(e){console.error(e);process.exit(1)}\"",
    "test": "npm run build && c8 --check-coverage --branches 50 --functions 20 --lines 20 --statements 20 node dist/tests/run-tests.js",
    "test:canonical": "jest src/__tests__/canonicalize.spec.ts",
    "test:python": "python3 packages/core/python/test_canonicalize.py"
  },
  "keywords": [
    "sonate",
    "trust-protocol",
    "constitutional-ai",
    "sonate"
  ],
  "author": "YSEEKU",
  "license": "MIT",
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^3.0.0",
    "@supabase/supabase-js": "^2.91.1",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "isomorphic-dompurify": "^2.35.0",
    "json-canonicalize": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.3",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^25.0.3",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  },
  "c8": {
    "include": [
      "dist/tests/run-tests.js"
    ],
    "exclude": [
      "dist/security/**",
      "dist/calculator/**",
      "dist/**/__tests__/**",
      "dist/**/mocks/**",
      "dist/**/metrics.ts.bak",
      "dist/**/v2.js",
      "dist/**/archive-*.js",
      "dist/**/enhanced-*.js"
    ],
    "reporter": [
      "text",
      "html"
    ]
  }
}
