{
  "name": "@sonate/core",
  "version": "1.4.0",
  "description": "Core trust protocol implementation for SONATE platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && mkdir -p dist && cp src/index.d.ts dist/index.d.ts || tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "npm run build && c8 --check-coverage --branches 40 --functions 35 --lines 40 --statements 40 node dist/tests/run-tests.js",
    "test:canonical": "jest src/__tests__/canonicalize.spec.ts",
    "test:python": "python3 packages/core/python/test_canonicalize.py"
  },
  "keywords": [
    "sonate",
    "trust-protocol",
    "constitutional-ai",
    "symbi"
  ],
  "author": "YSEEKU",
  "license": "MIT",
  "dependencies": {
    "@noble/ed25519": "^2.3.0",
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^2.3.0",
    "@supabase/supabase-js": "^2.89.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "isomorphic-dompurify": "^2.35.0",
    "json-canonicalize": "^2.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^25.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  }
}
