{
  "name": "yseeku-platform",
  "version": "1.0.0",
  "description": "SONATE Platform - Enterprise AI Trust Framework",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=web",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test --filter=@sonate/core --filter=@sonate/detect --filter=@sonate/orchestrate --filter=@sonate/lab --filter=@sonate/persistence --filter=web",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "demo:ledger": "npm run build --workspace @sonate/collaboration-ledger && node examples/ledger-demo/index.js"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "c8": "^9.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
