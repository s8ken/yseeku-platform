{
  "name": "yseeku-platform",
  "version": "2.0.0",
  "description": "SONATE Platform - The Trust Layer for AI",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=web",
    "build:packages": "npm run build --workspace=@sonate/schemas && npm run build --workspace=@sonate/core && npm run build --workspace=@sonate/detect && npm run build --workspace=@sonate/orchestrate && npm run build --workspace=@sonate/lab && npm run build --workspace=@sonate/persistence && npm run build --workspace=@sonate/policy",
    "build:vercel": "rm -rf packages/*/dist && npm run build --workspace=@sonate/core && ls packages/core/dist/*.d.ts && npm run build --workspace=web",
    "start": "npm start --workspace=web",
    "build:backend": "turbo run build --filter=backend",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test --filter=@sonate/core --filter=@sonate/detect --filter=@sonate/orchestrate --filter=@sonate/lab --filter=@sonate/persistence --filter=@sonate/policy",
    "test:integration": "turbo run test --filter=integration-tests",
    "test:e2e": "turbo run e2e --filter=web",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js}\" \"apps/*/src/**/*.{ts,tsx,js}\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,js}\" \"apps/*/src/**/*.{ts,tsx,js}\" \"scripts/**/*.js\"",
    "format:fix": "npm run format",
    "security": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "quality": "node scripts/code-quality-check.js",
    "quality:fix": "npm run lint:fix && npm run format:fix && npm run security:fix",
    "pre-commit": "npm run quality",
    "pre-push": "npm run build && npm run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "e2e:smoke": "node scripts/e2e-smoke.mjs",

    "demo:interactive": "npm run dev --workspace @sonate/new-demo",
    "version:check": "node scripts/version-sync.js",
    "version:update": "node scripts/version-sync.js",
    "version:sync": "node scripts/version-sync.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@supabase/supabase-js": "^2.98.0",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "c8": "^10.1.3",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^1.6.0",
    "nock": "^14.0.10",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "turbo": "^1.13.4",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.1",
    "elliptic": "6.6.1",
    "glob": "^7.2.3",
    "minimatch": "^3.1.2",
    "tar": ">=7.5.4",
    "ws": ">=7.5.10",
    "@ethersproject/providers": {
      "ws": "7.5.10"
    },
    "@noble/hashes": "2.0.1"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "next": "^16.1.6",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "2.0.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@vitest/ui": "^4.0.18",
    "axios": "^1.13.2",
    "esbuild": "^0.27.3",
    "jsdom": "^28.0.0",
    "lightningcss": "^1.31.1",
    "parse-duration": "^2.1.5",
    "tweetnacl": "^1.0.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "lightningcss-darwin-arm64": "^1.31.1"
  }
}
