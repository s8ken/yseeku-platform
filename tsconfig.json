{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@sonate/core": ["packages/core/src"],
      "@sonate/core/*": ["packages/core/src/*"],
      "@sonate/detect": ["packages/detect/src"],
      "@sonate/detect/*": ["packages/detect/src/*"],
      "@sonate/persistence": ["packages/persistence/src"],
      "@sonate/persistence/*": ["packages/persistence/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
