# =============================================================================
# YSEEKU Platform Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# Local: mongodb://localhost:27017/yseeku-platform
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/yseeku-platform
MONGODB_URI=mongodb://localhost:27017/yseeku-platform

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
# JWT Secret for access tokens (REQUIRED - generate with: openssl rand -hex 64)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Refresh Token Secret (REQUIRED - generate with: openssl rand -hex 64)
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production

# JWT Expiration times
JWT_EXPIRATION_TIME=1h
JWT_REFRESH_EXPIRATION_TIME=7d

# Password hashing rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=12

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration (in milliseconds)
LOCKOUT_DURATION=900000

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allowed origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW=900000

# Max requests per window
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Log directory
LOG_DIR=./logs

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# Email service for password resets (if using email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-app-password

# Redis for session storage (if using Redis)
# REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# AI/LLM Provider API Keys (Optional - stored in user profiles)
# -----------------------------------------------------------------------------
# These are examples - users will add their own API keys via the UI
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# TOGETHER_API_KEY=...

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
# Prometheus metrics endpoint enabled
METRICS_ENABLED=true

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://...@sentry.io/...

# -----------------------------------------------------------------------------
# Trust Protocol Configuration
# -----------------------------------------------------------------------------
# Minimum trust score threshold
MIN_TRUST_SCORE=5.0

# Enable trust receipts cryptographic signing
TRUST_RECEIPTS_ENABLED=true

# Trust receipt signature algorithm (Ed25519, RSA)
TRUST_SIGNATURE_ALGORITHM=Ed25519

# =============================================================================
# Development vs Production Notes
# =============================================================================
#
# DEVELOPMENT:
# - Use local MongoDB or MongoDB Atlas free tier
# - Set NODE_ENV=development
# - Use simple JWT_SECRET for testing (but still keep it secret!)
# - CORS_ORIGIN can include localhost ports
#
# PRODUCTION:
# - Use managed MongoDB (Atlas, AWS DocumentDB)
# - Set NODE_ENV=production
# - Generate strong JWT_SECRET and JWT_REFRESH_SECRET (64+ characters)
# - Restrict CORS_ORIGIN to your production domain only
# - Enable Redis for session storage
# - Configure SMTP for email notifications
# - Set up Sentry or similar for error tracking
# - Use environment variables via secrets manager (AWS Secrets Manager, etc.)
#
# =============================================================================
